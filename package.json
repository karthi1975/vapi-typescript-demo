{
  "name": "typescript-vapi-voice-assistant",
  "version": "2.0.1",
  "description": "Production-ready TypeScript Vapi Voice Assistant with Docker support",
  "author": "Karthi Jeyabalan",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "main": "dist/server.js",
  "scripts": {
    "build:server": "tsc src/server.ts --outDir dist --esModuleInterop --resolveJsonModule",
    "build:client": "webpack",
    "build": "npm run build:server && npm run build:client",
    "start": "node dist/server.js",
    "dev": "node server.js",
    "watch": "webpack --watch"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1"
  }
}